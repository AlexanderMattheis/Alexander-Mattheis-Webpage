<article class="listing">
  <div class="name">
    {{#if linking}}
        <h3>
          {{#link-to routeName model}}{{data.title}}{{/link-to}}
          <span class="author">by {{data.author}}</span>
        </h3>
    {{else}}
      <h3>{{data.title}} <span class="author">by {{data.author}}</span></h3>
    {{/if}}
  </div>

  <a href="{{data.path}}" download class="download">
    <span class="text">Download</span>
    <div class="button">
      <div class="sprite sprite-download"></div>
      <div class="date">{{data.date}}</div>
    </div>
  </a>

  <div class="container">
    <a href {{action "toggleSize"}} class="image-background {{if isResized 'image-resized'}}">
      <img class="image-foreground" src="{{data.image}}" alt="Preview">
    </a>

    <div class="text">
      <h5>Description</h5>
      <p class="small-text">
        {{data.description}}
      </p>

      <br>

      <h5>Tags</h5>
      <p class="small-text">
        {{data.tags}}
      </p>
    </div>

    <div class="licence">
      <h5>Licence</h5>
      <p class="small-text">
        {{{data.licence}}}
      </p>
    </div>
  </div>
</article>